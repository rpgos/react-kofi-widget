{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
  }
}
